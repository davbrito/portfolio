model Profile {
  userId        String       @id
  user          Users        @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String       @default("")
  title         String       @default("")
  location      String       @default("")
  experience    String       @default("")
  description   String       @default("")
  brief         String       @default("")
  aboutImage    String?
  aboutImageAlt String       @default("")
  aboutText     String       @default("")
  githubUrl     String?
  linkedinUrl   String?
  email         String?
  active        Boolean      @default(true)
  experiences   Experience[]
  skills        Skills[]
  projects      Proyects[]
  messages      Messages[]
}

model Messages {
  id        String    @id @default(uuid(7)) @db.Uuid
  profileId String
  profile   Profile   @relation(fields: [profileId], references: [userId], onDelete: Cascade)
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime  @default(now())
  readAt    DateTime?
}

model Experience {
  id         String   @id @default(uuid(7)) @db.Uuid
  profileId  String
  profile    Profile  @relation(fields: [profileId], references: [userId], onDelete: Cascade)
  title      String
  company    String
  location   String
  period     String
  highlights String[]
}

model Skills {
  id        String  @id @default(uuid(7)) @db.Uuid
  profileId String
  profile   Profile @relation(fields: [profileId], references: [userId], onDelete: Cascade)
  name      String
  level     String
  group     String
}

model Proyects {
  id          String   @id @default(uuid(7)) @db.Uuid
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [userId], onDelete: Cascade)
  title       String
  description String
  url         String?
  repoUrl     String?
  image       String?
  imageAlt    String?
  tags        String[]
}
