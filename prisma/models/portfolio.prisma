model Profile {
  userId        String       @id
  user          Users        @relation(fields: [userId], references: [id])
  name          String       @default("")
  title         String       @default("")
  location      String       @default("")
  experience    String       @default("")
  description   String       @default("")
  brief         String       @default("")
  aboutImage    String?
  aboutImageAlt String       @default("")
  aboutText     String       @default("")
  githubUrl     String?
  linkedinUrl   String?
  email         String?
  active        Boolean      @default(true)
  experiences   Experience[]
  skills        Skills[]
}

model Messages {
  id        String   @id @default(uuid(7)) @db.Uuid
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}

model Experience {
  id         String   @id @default(uuid(7)) @db.Uuid
  userId     String
  profile    Profile  @relation(fields: [userId], references: [userId])
  title      String
  company    String
  location   String
  period     String
  highlights String[]
}

model Skills {
  id      String  @id @default(uuid(7)) @db.Uuid
  userId  String
  profile Profile @relation(fields: [userId], references: [userId])
  name    String
  level   String
  group   String
}
