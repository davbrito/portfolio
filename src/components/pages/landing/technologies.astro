---
import type { TechnologyGroup } from "@/data/portfolio";

interface Props {
  technologies: TechnologyGroup[];
}

const { technologies } = Astro.props;
---

<div class="flex flex-col gap-6">
  {
    technologies.map((group) => (
      <div class="">
        <div class="text-foreground mb-4 flex items-center gap-3 text-sm font-semibold tracking-wide uppercase">
          <span class="text-primary">â–¹</span>
          <span>{group.title}</span>
        </div>
        <div class="grid grid-cols-2 gap-3">
          {group.skills.map((skill) => (
            <div class="border-border bg-card/70 text-foreground border px-3 py-3">
              <div class="text-primary flex items-center justify-between text-xs">
                <span>{skill.name}</span>
                <span class="bg-primary/10 text-primary rounded-full border px-2 py-0.5 text-[11px] font-medium tracking-wide">
                  {skill.level}
                </span>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))
  }
</div>
